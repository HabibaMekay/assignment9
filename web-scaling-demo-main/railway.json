{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "services": {
      "app": {
        "type": "web",
        "port": 8080,
        "domains": ["your-app-name.up.railway.app"],
        "healthcheckPath": "/health"
      },
      "redis": {
        "type": "redis",
        "version": "7",
        "disk": {
          "size": 1,
          "mountPath": "/data"
        }
      }
    }
  },
  "environments": {
    "production": {
      "variables": {
        "SERVER_PORT": "8080",
        "SERVER_HOST": "0.0.0.0",
        "REDIS_URL": "${REDIS_URL}", // Railway automatically provides this
        "WEATHER_API_URL": "https://api.open-meteo.com/v1/forecast",
        "NODE_ENV": "production"
      }
    }
  }
}